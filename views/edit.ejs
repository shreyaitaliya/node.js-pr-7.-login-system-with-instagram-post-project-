<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap 5 Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/create.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="sidebar">
        <ul>
            <li>
                <span class="image">
                    <!-- <div class="header"> -->
                    <img class="logo ms-4"
                        src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2a/Instagram_logo.svg/1200px-Instagram_logo.svg.png"
                        alt="Instagram" height="60px">
                    <!-- </div> -->
                </span>
            </li>
            <li class="nav-link">
                <a href="/dashbord">
                    <i class="fa-solid fa-house icon text-black fw-bold"></i>
                    <span class="text nav-text text-black fs-6 fw-bold">Home</span>
                </a>
            </li>
            <li class="nav-link">
                <a href="/create">
                    <i class="fa-regular fa-square-plus text-black fs-6 icon"></i>
                    <span class="text nav-text text-black fs-6">Create</span>
                </a>
            </li>
            <li class="nav-link">
                <a href="/profile">
                    <i class="fa-regular fa-square-plus text-black fs-6 icon"></i>
                    <span class="text nav-text text-black fs-6">Profile</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="container create">
        <div class="row">
            <form method="post" action="/updateUser" enctype="multipart/form-data">
                <div class="card">
                    <div class="card-body">
                        <input type="hidden" name="editid" value="<%= single.id %>">
                        <img id="frame" src="<%= single.image %>" width="200px" height="200px" />
                        <input type="file" name="image" value="<%= single.image %>" onchange=" preview()">
                    </div>
                    <div class="border-top">
                        <label class="fw-bold fs-6">Description:-</label>
                        <input type="text" name="description" value="<%= single.description %>"
                            class="m-0 my-3 p-2 mx-3">
                    </div>
                    <button class="btn btn-primary fw-bold  bg-gradient mb-3" href="#" type="submit">Submit</button>
                </div>
            </form>

        </div>
    </div>
    </div>

</body>

<script>
    function preview() {
        let frame = document.getElementById('frame');
        frame.src = URL.createObjectURL(event.target.files[0]);
    }
</script>

</html>